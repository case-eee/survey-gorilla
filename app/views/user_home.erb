<h1>Welcome to Survey Gorilla, <%= current_user.first_name %></h1>
<div>
<h2> Your Surveys </h2>
  <% @authored_surveys.each do |survey|%>
    <ul>
      <li><a href="/surveys/<%=survey.id%>/questions"><%= survey.title %></a><br> <a  class="linkbtn" href="/surveys/<%=survey.id%>/edit">Edit</a> <a  class="linkbtn" href="/surveys/<%=survey.id%>/results">View Results</a></li>
    </ul>
  <%end%>
</div>

<div>
  <h2> Take a survey </h2>
  <% @surveys.each do |survey| %>
    <ul>
      <li><a href="/surveys/<%=survey.id%>/questions"><%= survey.title %></a></li>
    </ul>
  <%end%>
  <a id="view_surveys" class="linkbtn" href="/surveys">View all surveys</a>
  <a id="create_survey" class="linkbtn" href="/surveys/new">Create new survey</a>
</div>

